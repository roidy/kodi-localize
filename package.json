{
    "name": "kodi-localize",
    "displayName": "Kodi Localize",
    "description": "Kodi localize helpers",
    "version": "0.1.3",
    "engines": {
        "vscode": "^1.66.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:kodi-localize.LocalizeIDOnly",
        "onCommand:kodi-localize.LocalizeFull",
        "workspaceContains:**/*.xml"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "kodi-localize.LocalizeIDOnly",
                "title": "Kodi: Localize ID"
            },
            {
                "command": "kodi-localize.LocalizeFull",
                "title": "Kodi: $LOCALIZE[]"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "kodi-localize.LocalizeIDOnly",
                    "group": "YourGroup@1",
                    "when": "resourceExtname == .xml"
                },
                {
                    "command": "kodi-localize.LocalizeFull",
                    "group": "YourGroup@1",
                    "when": "resourceExtname == .xml"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/gettext-parser": "^4.0.1",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "14.x",
        "@types/node-fetch": "^2.6.1",
        "@types/request": "^2.48.8",
        "@types/vscode": "^1.66.0",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "@vscode/test-electron": "^2.1.3",
        "eslint": "^8.11.0",
        "glob": "^7.2.0",
        "mocha": "^9.2.2",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "node-fetch": "^2.6.7",
        "pofile": "^1.1.3",
        "request": "^2.88.2"
    }
}
