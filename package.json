{
    "name": "kodi-localize",
    "displayName": "Kodi Localize",
    "description": "Kodi localize helpers",
    "version": "0.1.4",
    "engines": {
        "vscode": "^1.66.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "",
    "repository": {
        "type": "git",
        "url": "https://github.com/roidy/kodi-localize.git"
    },
    "homepage": "https://github.com/roidy/kodi-localize/blob/master/README.md",
    "activationEvents": [
        "onCommand:kodi-localize.Localize",
        "workspaceContains:**/*.xml"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "kodi-localize.Localize",
                "title": "Kodi: Localize"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "kodi-localize.Localize",
                    "group": "1_kodilocalizer",
                    "when": "resourceExtname == .xml"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Kodi Localizer",
            "properties": {
                "kodilocalize.decoratorColor": {
                    "type": "string",
                    "format": "color-hex",
                    "default": "#ffffff60",
                    "description": "Decoration color #rrggbbaa"
                },
                "kodilocalize.operation": {
                    "type": "string",
                    "default": "ID Only",
                    "enum": [
                        "ID Only",
                        "$LOCALIZE[]"
                    ]
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/gettext-parser": "^4.0.1",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "14.x",
        "@types/node-fetch": "^2.6.1",
        "@types/request": "^2.48.8",
        "@types/vscode": "^1.66.0",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "@vscode/test-electron": "^2.1.3",
        "eslint": "^8.11.0",
        "glob": "^7.2.0",
        "mocha": "^9.2.2",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "node-fetch": "^2.6.7",
        "pofile": "^1.1.3",
        "request": "^2.88.2"
    }
}
